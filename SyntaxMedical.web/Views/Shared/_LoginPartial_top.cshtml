@using Microsoft.AspNetCore.Identity
@using SyntaxMedical.web.Data
@inject SignInManager<HGatesEmployee> SignInManager
@inject UserManager<HGatesEmployee> UserManager

 
@if (SignInManager.IsSignedIn(User))
{
    <a  class="nav-link px-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
}
else
{
	<a class="nav-link px-3" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
 
